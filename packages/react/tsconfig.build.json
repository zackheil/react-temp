{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", //todo: change?
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@utils/testing": ["./src/.meta-utils/test.ts"],
      "@utils/stories": ["./src/.meta-utils/stories.ts"]
    }
  },
  "include": ["src"],
  "exclude": [
    "vite.config.ts",
    "vitest.config.ts",
    "**/tests/*.*",
    "**/*.test.*",
    "**/*.spec.*",
    "./dist/**",
    "**/.meta-utils/**/*.ts",
    "**/*.stories.tsx",
    "**/stories/**/*.tsx",
    "**/stories/**/*.ts",
    "**/stories/**/*.mdx",
    "**/stories/**/*.md"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
